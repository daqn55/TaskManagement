@model TaskManagement.Web.Models.Employee.EmployeeViewModel
@{
    ViewData["Title"] = "Edit Employee";
}

<div class="container col-lg-12">
    <div class="row col-sm-6 center">
        <h3 class="mb-3 mt-3">Edit employeee</h3>
        <form asp-controller="Employee" asp-action="Edit" autocomplete="off" method="post" enctype="multipart/form-data">
            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="floatingFullNameInput" placeholder="fullName" name="FullName" value="@Model.FullName">
                <label for="floatingFullNameInput">FullName</label>
            </div>
            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="floatingEmailInput" placeholder="email" name="Email" value="@Model.Email">
                <label for="floatingEmailInput">Email</label>
            </div>
            <div class="form-floating mb-3">
                <input type="tel" class="form-control" id="floatingPhoneNumberInput" placeholder="phoneNumber" name="PhoneNumber" value="@Model.PhoneNumber">
                <label for="floatingPhoneNumberInput">Phone number</label>
            </div>
            <div class="form-floating mb-3">
                <input type="date" class="form-control" id="floatingDateOfBirthInput" placeholder="dateOfBirth" name="DateOfBirth" value="@Model.DateOfBirth">
                <label for="floatingDateOfBirthInput">Date of birth</label>
            </div>
            <div class="form-floating mb-3">
                <input type="number" class="form-control" id="floatingMonthlySalaryInput" placeholder="monthlySalary" name="MonthlySalary" step=".01" value="@Model.MonthlySalary">
                <label for="floatingMonthlySalaryInput">Monthly salary</label>
            </div>
            <input type="hidden" name="Id" value="@Model.Id"/>
            <button type="submit" class="btn btn-primary">Edit employee</button>
        </form>
    </div>
</div>